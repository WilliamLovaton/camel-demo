<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:camel-cxf="http://camel.apache.org/schema/cxf/jaxrs"
  xsi:schemaLocation="
      http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
      http://camel.apache.org/schema/cxf/jaxrs http://camel.apache.org/schema/cxf/jaxrs/camel-cxf.xsd">
    <!-- CXF servers -->
    <camel-cxf:rsServer address="/api/apicontroller"
        id="controllerServiceServer" loggingFeatureEnabled="false" serviceClass="com.compartamos.controller.ApiController">
        <camel-cxf:providers>
            <bean class="com.fasterxml.jackson.jakarta.rs.json.JacksonJsonProvider"/>
        </camel-cxf:providers>
    </camel-cxf:rsServer>
    <!-- Route builder -->
    <bean class="com.compartamos.camell.ApiRouteBuilder" id="proxyRouteBuilder">
        <property name="restEndpoint" value="cxfrs:bean:controllerServiceServer?bindingStyle=SimpleConsumer"/>
    </bean>
</beans>
